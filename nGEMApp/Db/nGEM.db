## mbbi names should match DiplayMode enum in asyn driver
record(mbbo, "$(P)$(Q)DISPLAY:SP")
{
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),0,1)DISPLAY")
    field(ZRVL, 0)
    field(ONVL, 1)
    field(TWVL, 2)
    field(THVL, 3)
    field(ZRST, "2dfxy")
    field(ONST, "2dlxy")
    field(TWST, "2davg")
    field(THST, "2drng")
}

record(mbbi, "$(P)$(Q)DISPLAY")
{
